<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/loading_failed" />

    <TextView
        android:id="@id/txtLoadFailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/blue"
        android:textSize="16sp" />

    <com.zhan.framework.ui.widget.RippleButton
        android:id="@+id/layoutReload"
        style="@style/text_white_bg_blue_half_circle_btn_style"
        android:layout_width="100dp"
        android:textSize="@dimen/text_size_normal"
        android:minHeight="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/comm_v_margin"
        android:text="@string/comm_reload_hint"
        android:textStyle="italic"
        ripple:rv_type="rectangle"
        ripple:rv_zoom="true" />
</LinearLayout>
