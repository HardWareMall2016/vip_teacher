<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mine_head_bg">
    <!--android:background="@color/action_bar_bg_color"-->
<RelativeLayout
    android:id="@+id/my_signature_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/mine_round_margin_bottom"
    >
    <ImageView
        android:id="@+id/mylesson_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_left"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        />
    <com.zhan.framework.ui.widget.MaterialRippleRelativeLayout
        android:id="@+id/rl_mysignature_SignInTotal"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/bg_white_rounded"
        android:layout_marginLeft="106dp"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleColor="#585858"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true">

        <TextView
            android:id="@+id/mysignature_mouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:textColor="@color/white"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/mysignature_SignInTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textSize="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="116dp"
            android:text="应签到总数"
            android:textColor="@color/white"
            android:textSize="14sp"/>

    </com.zhan.framework.ui.widget.MaterialRippleRelativeLayout>
    <ImageView
        android:id="@+id/mylesson_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_right_write"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        />
</RelativeLayout>

    <LinearLayout
        android:id="@+id/my_signature_ll"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/my_signature_rl"
        android:orientation="horizontal"
        android:background="#F5C85B"
        android:gravity="center">


        <com.zhan.framework.ui.widget.MaterialRippleRelativeLayout
            android:id="@+id/rl_mysignature_ForgetSignIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#F5C85B"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="#585858"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true"
            >
            <TextView
                android:id="@+id/mysignature_ForgetSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:gravity="right"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_mysignature_ForgetSignIn"
                android:layout_toRightOf="@+id/mysignature_ForgetSignIn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="忘记签到"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="16dp"
                />
        </com.zhan.framework.ui.widget.MaterialRippleRelativeLayout>


        <com.zhan.framework.ui.widget.MaterialRippleRelativeLayout
            android:id="@+id/rl_mysignature_BeLate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#FCAE58"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="#585858"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true"
            >
            <TextView
                android:id="@+id/mysignature_BeLate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:gravity="right"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_mysignature_BeLate"
                android:layout_toRightOf="@+id/mysignature_BeLate"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="迟到"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="16dp"
                />
        </com.zhan.framework.ui.widget.MaterialRippleRelativeLayout>


        <com.zhan.framework.ui.widget.MaterialRippleRelativeLayout
            android:id="@+id/rl_mysignature_Caveat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#F18C22"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="#585858"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true"
            >
            <TextView
                android:id="@+id/mysignature_Caveat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:gravity="right"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_mysignature_Caveat"
                android:layout_toRightOf="@+id/mysignature_Caveat"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="警告"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="16dp"
                />
        </com.zhan.framework.ui.widget.MaterialRippleRelativeLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/my_signature_ll"
        android:background="#EEEEEE"/>

</RelativeLayout>